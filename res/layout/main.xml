<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
        >
    <TextView
            android:id="@+id/gpsState"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            />
    <Button
            android:id="@+id/locationToggleButton"
            android:layout_below="@+id/gpsState"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Enable or Disable Location"
            android:layout_margin="5dp"
            android:enabled="true"
            />
    <Button
            android:id="@+id/gpsGetPosition"
            android:layout_below="@+id/locationToggleButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Get Position"
            android:layout_margin="5dp"
            android:enabled="false"
            />
    <Button
            android:id="@+id/listproviders"
            android:layout_below="@+id/gpsGetPosition"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="List Current Provider"
            android:layout_margin="5dp"
            android:enabled="false"
            />
    <ScrollView
            android:id="@+id/editTextScrollView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listproviders"
            android:layout_margin="5dp">
        <EditText
                android:id="@+id/displayEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:editable="false"
                />
    </ScrollView>

</RelativeLayout>
